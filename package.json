{
  "name": "source",
  "homepage": "http://kolev.io/songs/",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-ga": "^2.6.0",
    "react-lazyload": "^2.6.2",
    "react-scripts": "3.1.0",
    "semantic-ui-react": "^0.87.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.2",
    "@types/react": "^16.9.2",
    "@types/react-lazyload": "^2.5.0",
    "copy-webpack-plugin": "^5.0.4",
    "husky": "^3.0.4",
    "jest-cli": "^24.9.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.19.0",
    "tslint-etc": "^1.6.0",
    "typescript": "^3.5.3",
    "webpack-manifest": "^1.0.8"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run copy-assets && npm run lint && react-scripts build",
    "test": "jest",
    "eject": "react-scripts eject",
    "lint": "tslint --project tsconfig.json --fix -c tslint.json 'src/**/*.ts*'",
    "copy-assets": "mkdir -p src/data && cp -r data_parser/data/categories src/data/ && cp data_parser/data/categories_lookup.json src/data/"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "jest --coverage && cd data_parser && ./venv/bin/python -m unittest discover"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
